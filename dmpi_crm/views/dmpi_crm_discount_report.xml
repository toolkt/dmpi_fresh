<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_dmpi_crm_discount_tree" model="ir.ui.view">
         <field name="name">dmpi.crm.discount.tree</field>
         <field name="model">dmpi.crm.discount</field>
         <field name="arch" type="xml">
             <tree string="Discount Report">
                 <field name="inv_create_date"/>
                 <field name="contract"/>
                 <field name="sale_order"/>
                 <field name="partner_id"/>
                 <field name="material"/>
                 <field name="qty"/>
                 <field name="line_net_value"/>
                 <field name="invoice_price"/>
                 <field name="base_price"/>
             </tree>
         </field>
    </record>

    <record id="action_dmpi_crm_discount" model="ir.actions.act_window">
        <field name="name">Discount Report</field>
        <field name="res_model">dmpi.crm.discount</field>
        <field name="view_mode">tree,pivot</field>
        <field name="view_id"></field> 
        <field name="context">{}</field>
        <!-- <field name="search_view_id" ref="view_dict_report_filter"/> -->
        <!-- <field name="context">{'search_default_group_by_type': True}</field> -->
    </record>

    <menuitem action="action_dmpi_crm_discount" id="menu_dmpi_crm_discount" parent="menu_dmpi_crm_commercial_reports" sequence="20"/>

</odoo>