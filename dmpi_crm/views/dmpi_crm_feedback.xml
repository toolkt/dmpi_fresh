<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>



        <record id="view_dmpi_crm_files_tree" model="ir.ui.view">
            <field name="name">CRM files</field>
            <field name="model">dmpi.crm.files</field>
            <field name="arch" type="xml">
                <tree editable='bottom'>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="attachment_ids" widget="many2many_binary"/>
                </tree>
            </field>
        </record>


        <record id="action_dmpi_crm_files" model="ir.actions.act_window">
            <field name="name">iles</field>
            <field name="res_model">dmpi.crm.files</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_dmpi_crm_files" action="action_dmpi_crm_files" parent="menu_dmpi_crm_complaint_report_config"/>

        <record id="action_dmpi_crm_customer_files" model="ir.actions.act_window">
            <field name="name">Files</field>
            <field name="res_model">dmpi.crm.files</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_dmpi_crm_customer_files" action="action_dmpi_crm_customer_files" parent="menu_main_dmpi_customer_contract" groups="group_custom_crm_customer" sequence="60"/>





        <record id="view_dmpi_crm_feedback_tree" model="ir.ui.view">
            <field name="name">CRM Feedback</field>
            <field name="model">dmpi.crm.feedback</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user"/>
                </tree>
            </field>
        </record>


        <record id="view_dmpi_crm_feedback_form" model="ir.ui.view">
            <field name="name">dmpi.crm.feedback.form</field>
            <field name="model">dmpi.crm.feedback</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Fiscal Year">
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="note_type"/>
                                <field name="user"/>
                                <field name="contract_id"/>
                                <field name="name"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Attachments">
                                <field name="body_html"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>



        <record id="action_dmpi_crm_feedback" model="ir.actions.act_window">
            <field name="name">Feedback</field>
            <field name="res_model">dmpi.crm.feedback</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_dmpi_crm_feedback" action="action_dmpi_crm_feedback" parent="menu_dmpi_crm_complaint_report_config"/>


        <record id="action_dmpi_crm_customer_feedback" model="ir.actions.act_window">
            <field name="name">Feedback</field>
            <field name="res_model">dmpi.crm.feedback</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_dmpi_crm_customer_feedback" action="action_dmpi_crm_customer_feedback" parent="menu_main_dmpi_customer_contract" groups="group_custom_crm_customer" sequence="50"/>


    </data>


</odoo>