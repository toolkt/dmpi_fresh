<?xml version="1.0" encoding="UTF-8"?>
<odoo>



        <record id="view_dmpi_crm_sale_order_search" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">dmpi.crm.sale.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="ship_to_id"/>
                    <field name="notify_id"/>
                    <field name="sap_doc_type" />
                    <field name="sales_org"/>
                </search>
            </field>
        </record>

        <record id="view_dmpi_crm_sale_order_tree" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">dmpi.crm.sale.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ship_to_id"/>
                    <field name="notify_id"/>
                    <field name="sap_doc_type" />
                    <field name="sales_org"/>
                </tree>
            </field>
        </record>


        <record id="view_dmpi_crm_sale_order_form" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">dmpi.crm.sale.order</field>
            <field name="arch" type="xml">
                <form class="o_form_document">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_submit_so"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                string="Submit SO">
                            </button>

                            <button name="toggle_valid" class="oe_stat_button" type="object" icon="fa-globe">
                                <field name="valid" widget="boolean_button"
                                    options='{"terminology": {"string_true": "Valid", "hover_false": "Hold"}}'/>
                            </button>

                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name_disp"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="ship_to_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" required="1"/>
                                <field name="notify_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" required="1"/>
                                <field name="sap_doc_type" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" required="1"/>
                                <field name="sales_org" required="1"/>
                                <field name="plant" required="1"/>
                            </group>
                            <group>
                                <field name="sold_via_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="ship_line" />
                                <field name="shell_color" />
                                <field name="requested_delivery_date" />
                                <field name="estimated_date" />
                                <field name="total_amount" invisible="1"/>
                            </group>
                        </group>
                        <field name="notes"  widget="html"/>

                        <notebook>
                            <page string="Orders">
                                <field name="order_ids">
                                    <tree editable="bottom">
                                        <field name="so_line_no" readonly="1"/>
                                        <field name="product_id" options="{'no_create': True, 'no_open': True}" domain="[('partner_id', '=', parent.partner_id)]"/>
                                        <field name="product_code"/>
                                        <field name="name" />
                                        <field name="price" />
                                        <field name="uom" />
                                        <field name="qty" sum='Total Qty'/>
                                        <field name="total"  sum='Total Amount'/>
                                    </tree>
                                </field>                            
                            </page>                            
                            <page string="Summary">
                                <group>
                                    <group string="WITH CROWNS">
                                        <field name="p5_id" nolabel="1"/><field name="p5" nolabel="1"/>
                                        <field name="p6_id" nolabel="1"/><field name="p6" nolabel="1"/>
                                        <field name="p7_id" nolabel="1"/><field name="p7" nolabel="1"/>
                                        <field name="p8_id" nolabel="1"/><field name="p8" nolabel="1"/>
                                        <field name="p9_id" nolabel="1"/><field name="p9" nolabel="1"/>
                                        <field name="p10_id" nolabel="1"/><field name="p10" nolabel="1"/>
                                        <field name="p12_id" nolabel="1"/><field name="p12" nolabel="1"/>
                                        <field name="total_crown"/>
                                    </group>
                                    <group string="CROWNLESS">
                                        <field name="p5c7_id" nolabel="1"/><field name="p5c7" nolabel="1"/>
                                        <field name="p6c8_id" nolabel="1"/><field name="p6c8" nolabel="1"/>
                                        <field name="p7c9_id" nolabel="1"/><field name="p7c9" nolabel="1"/>
                                        <field name="p8c10_id" nolabel="1"/><field name="p8c10" nolabel="1"/>
                                        <field name="p9c11_id" nolabel="1"/><field name="p9c11" nolabel="1"/>
                                        <field name="p10c12_id" nolabel="1"/><field name="p10c12" nolabel="1"/>
                                        <field name="p12c20_id" nolabel="1"/><field name="p12c20" nolabel="1"/>
                                        <field name="total_crownless"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Settings">
                                <group>
                                    <group>
                                        <field name="so_no"/>
                                        <field name="name"/>
                                        <field name="sap_so_no" />
                                        <field name="sap_so_date" />
                                    </group>
                                    <group>
                                        <field name="contract_id" />
                                        <field name="partner_id" />
                                        <field name="valid_disp" />
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


