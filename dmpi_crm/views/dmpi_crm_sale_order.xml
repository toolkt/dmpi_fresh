<?xml version="1.0" encoding="UTF-8"?>
<odoo>



        <record id="view_dmpi_crm_sale_order_search" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">dmpi.crm.sale.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <!-- <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                    <group>
                        <filter string="Active" context="{'group_by': 'active'}"/>
                    </group> -->
                </search>
            </field>
        </record>

        <record id="view_dmpi_crm_sale_order_tree" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">dmpi.crm.sale.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="view_dmpi_crm_sale_order_form" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">dmpi.crm.sale.order</field>
            <field name="arch" type="xml">
                <form class="o_form_document">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_submit_so"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                string="Submit SO">
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" required="1"/>
                                <field name="notify_partner_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" required="1"/>
                                <field name="sap_doc_type" required="1"/>
                                <field name="sales_org" required="1"/>
                            </group>
                            <group>
                                <field name="valid" />
                                <field name="shell_color" />
                                <field name="requested_deivery_date" />
                                <field name="estimated_date" />
                                <field name="sap_so_no" />
                                <field name="total_amount" />
                            </group>
                        </group>
                        <field name="notes" placeholder="Notes and Remarks"/>

                        <notebook>
                            <page string="Sale Order">
                                <field name="order_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="so_line_no" readonly="1"/>
                                        <field name="product_id" options="{'no_create': True, 'no_open': True}" domain="[('partner_id', '=', parent.partner_id)]"/>
                                        <field name="product_code"/>
                                        <field name="name" />
                                        <field name="price" />
                                        <field name="uom" />
                                        <field name="qty" sum='Total Qty'/>
                                        <field name="total"  sum='Total Amount'/>
                                    </tree>
                                </field>                            
                            </page>
                            <page string="Settings">
                                <group>
                                    <group>
                                        <field name="so_no"/>
                                    </group>
                                    <group>
                                        <field name="contract_id" />
                                    </group>
                                </group>
                            </page>
                        </notebook>

                        <separator/>
                        <group>
                            <group string="WITH CROWNS">
                                <field name="p5"/>
                                <field name="p6"/>
                                <field name="p7"/>
                                <field name="p8"/>
                                <field name="p9"/>
                                <field name="p10"/>
                                <field name="p12"/>
                                <field name="total_crown"/>
                            </group>
                            <group string="CROWNLESS">
                                <field name="p5c7"/>
                                <field name="p6c8"/>
                                <field name="p7c9"/>
                                <field name="p8c10"/>
                                <field name="p9c11"/>
                                <field name="p10c12"/>
                                <field name="p12c20"/>
                                <field name="total_crownless"/>
                            </group>
                        </group>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="action_dmpi_crm_sale_order" model="ir.actions.act_window">
            <field name="name">Sale Order</field>
            <field name="res_model">dmpi.crm.sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
           <!--  <field name="context" eval="{'search_default_filter_active':1}"/> -->
        </record>

        <menuitem id="menu_sale_order" action="action_dmpi_crm_sale_order" parent="menu_dmpi_crm_commercial_top"/>


</odoo>