        <record id="view_dmpi_crm_partner_search" model="ir.ui.view">
            <field name="name">Partner</field>
            <field name="model">dmpi.crm.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                    <group>
                        <filter string="Active" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_dmpi_crm_partner_tree" model="ir.ui.view">
            <field name="name">Partner</field>
            <field name="model">dmpi.crm.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="customer_code" />
                    <field name="sales_org" />
                    <field name="dist_channel" />
                    <field name="division" />
                    <field name="plant" />
                    <field name="active" />
                </tree>
            </field>
        </record>


        <record id="view_dmpi_crm_partner_form" model="ir.ui.view">
            <field name="name">Partner</field>
            <field name="model">dmpi.crm.partner</field>
            <field name="arch" type="xml">
                <form class="o_form_document">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="default_plant" />
                                <field name="customer_code" />
                                <field name="function" />
                                <field name="account_group" />
                                <field name="default_validity" />
                            </group>
                            <group>
                                <field name="city" />
                                <field name="city_code" />
                                <field name="street" />
                                <field name="postal_code" />
                                <field name="email" />
                                <field name="phone" />
                                <field name="fax" />
                                <field name="sales_org" />
                                <field name="dist_channel" />
                                <field name="division" />
                                <field name="plant" />
                                <field name="active" />

                            </group>
                        </group>

                        <notebook>
                            <page string="SBFTI">
                                <group>
                                    <group>
                                        <field name="alt_customer_code" />
                                        <field name="alt_sales_org" />
                                        <field name="alt_dist_channel" />
                                        <field name="alt_division" />
                                        <field name="final_ship_to" />
                                    </group>
                                </group>
                            </page>
                            <page string="Accounts Receivables">
                                <field name="ar_records" />
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

