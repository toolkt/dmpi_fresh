    <!-- ACCOUNTS RECEIVABLE -->
    <record id="view_dmpi_crm_partner_ar_search" model="ir.ui.view">
        <field name="name">Accounts Receivable</field>
        <field name="model">dmpi.crm.partner.ar</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
